{
  "openapi": "3.0.1",
  "info": {"title": "Airtable Records API","version": "1.0.0"},
  "servers": [{"url": "https://api.airtable.com/v0/<BaseID>"}],
  "paths": {
    "/{table}": {
      "get": {
        "summary": "Retrieve records from a table",
        "parameters": [
          {"in":"path","name":"table","schema":{"type":"string"},"required":true},
          {"in":"query","name":"maxRecords","schema":{"type":"integer"},"required":false},
          {"in":"query","name":"view","schema":{"type":"string"},"required":false}
        ],
        "responses": {"200":{"description":"Airtable response","content":{"application/json":{}}}}
      }
    }
  }
}
